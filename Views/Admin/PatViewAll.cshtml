@model IEnumerable<ClinicManagementProject.Models.Patient>

@{Layout = "~/views/shared/_Layout.cshtml";}

<body>

    <h1 id="main" class="alert alert-success">Patient Directory</h1>
    <hr />
    <div>@Html.ActionLink("Search", "PatSearchAll", "Admin")</div>


    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Patient Name</th>
                <th scope="col">Age</th>
                <th scope="col">Phone</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
<tr>
    <th scope="row">@Html.DisplayFor(model => item.Patient_Id)</th>
    <td> @Html.DisplayFor(model => item.Name) </td>
    <td> @Html.DisplayFor(model => item.Age) </td>
    <td> @Html.DisplayFor(model => item.Phone) </td>
    <td>
        <p>@Html.ActionLink("View Consultations", "Index", new { patid = item.Patient_Id })</p>
    </td>
</tr>            }

        </tbody>
    </table>

    <section>
        @Html.ActionLink("Back to Login", "Login", "Admin")
    </section>
    <section class="alert alert-danger">
        @ViewBag.Message
    </section>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
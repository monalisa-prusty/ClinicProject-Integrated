@model IEnumerable<ClinicManagementProject.Models.DoctorSchedule>

@{Layout = "~/views/shared/_Layout.cshtml";}
<body>


    <table class="table" style="width:500px;">
        <thead>
            <tr>

                <th class="thead-dark">
                    @Html.DisplayNameFor(model => model.Time)
                </th>

                <th>Status</th>
                <th>Patient Name</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>


    @if (item.Patient_Id == null)
    {
<td><p>Empty</p></td>
                    <td><p>-</p></td>                }
    @if (item.Patient_Id != null)
    {
<td><p>Booked</p></td>

                    <td>@Html.DisplayFor(modelItem => item.Patient.Name)</td> } @*@Html.ActionLink("Book", "BookSlotForPatient", new { timeid = item.Timeslot_Id, docid = item.Doctor_Id })*@


</tr>            }
        </tbody>
    </table>

    <section>
        @*@Html.ActionLink("Book Appointment", "BookAppointment", new { str = Model.Username })*@

        <p>@Html.ActionLink("Back", "DocMain")</p>



    </section>
</body>
</html>
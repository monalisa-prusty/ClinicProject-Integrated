@model ClinicManagementProject.Models.Patient

@{Layout = "~/views/shared/_Layout.cshtml";}

<body>

    <h1 id="main" class="alert alert-success">Patient Directory</h1>
    <hr />
    <div>@Html.ActionLink("View All", "PatViewAll", "Admin")</div>
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("PatSearch", "Admin", FormMethod.Post))
            {
@Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "form-control" })
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })


                                <button class="btn btn-primary">Register Patient</button>            }
        </div>
    </div>
    <section>
        @Html.ActionLink("Back to Login", "Login", "Admin")
    </section>
    <section class="alert alert-danger">
        @ViewBag.Message
    </section>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>